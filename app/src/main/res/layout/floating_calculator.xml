<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <!-- Collapsed View (FAB-like button) -->
    <LinearLayout
        android:id="@+id/collapsed_view"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/fab_background"
        android:elevation="8dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ“Š"
            android:textSize="16sp" />

    </LinearLayout>

    <!-- Expanded View (Calculator) -->
    <LinearLayout
        android:id="@+id/expanded_view"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:background="@drawable/calculator_background"
        android:elevation="12dp"
        android:orientation="vertical"
        android:visibility="gone">

        <!-- Header with drag handle and controls -->
        <LinearLayout
            android:id="@+id/drag_handle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/header_background"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="6dp"
            android:paddingVertical="4dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Calculator"
                android:textColor="#E6EDF3"
                android:textSize="9sp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/btn_collapse"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:contentDescription="Collapse"
                android:src="@drawable/ic_minimize"
                android:padding="2dp"
                android:scaleType="fitCenter" />

            <ImageButton
                android:id="@+id/btn_close"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="2dp"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:contentDescription="Close"
                android:src="@drawable/ic_close"
                android:padding="2dp"
                android:scaleType="fitCenter" />

        </LinearLayout>

        <!-- Input Field -->
        <EditText
            android:id="@+id/input_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="6dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/input_background"
            android:hint="Price..."
            android:inputType="numberDecimal"
            android:padding="6dp"
            android:textColor="#E6EDF3"
            android:textColorHint="#8B949E"
            android:textSize="11sp" />

        <!-- Max Trade Section -->
        <TextView
            android:id="@+id/label_max_trade_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="6dp"
            android:layout_marginTop="6dp"
            android:text="MAX TRADE"
            android:textColor="#58A6FF"
            android:textSize="7sp"
            android:textStyle="bold"
            android:letterSpacing="0.1" />

        <!-- Max Units Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="6dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/input_background"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="6dp"
            android:paddingVertical="4dp">

            <TextView
                android:id="@+id/label_max_units"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Units"
                android:textColor="#58A6FF"
                android:textSize="8sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/value_max_units"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â€”"
                android:textColor="#E6EDF3"
                android:textSize="9sp"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- Max Total Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="6dp"
            android:layout_marginTop="2dp"
            android:background="@drawable/input_background"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="6dp"
            android:paddingVertical="4dp">

            <TextView
                android:id="@+id/label_max_total"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Total"
                android:textColor="#58A6FF"
                android:textSize="8sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/value_max_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â€”"
                android:textColor="#E6EDF3"
                android:textSize="9sp"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="6dp"
            android:layout_marginTop="6dp"
            android:background="#30363D" />

        <!-- Profit Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="6dp"
            android:layout_marginTop="6dp"
            android:text="PROFIT"
            android:textColor="#3FB950"
            android:textSize="7sp"
            android:textStyle="bold"
            android:letterSpacing="0.1" />

        <!-- +20% Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="6dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/profit_row_background"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="6dp"
            android:paddingVertical="4dp">

            <TextView
                android:id="@+id/label_profit_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="+20%"
                android:textColor="#3FB950"
                android:textSize="8sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/value_profit_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â€”"
                android:textColor="#E6EDF3"
                android:textSize="9sp"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- +10% Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="6dp"
            android:layout_marginTop="2dp"
            android:background="@drawable/profit_row_background_light"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="6dp"
            android:paddingVertical="4dp">

            <TextView
                android:id="@+id/label_profit_2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="+10%"
                android:textColor="#3FB950"
                android:textSize="8sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/value_profit_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â€”"
                android:textColor="#E6EDF3"
                android:textSize="9sp"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="6dp"
            android:layout_marginTop="6dp"
            android:background="#30363D" />

        <!-- Loss Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="6dp"
            android:layout_marginTop="6dp"
            android:text="STOP LOSS"
            android:textColor="#F85149"
            android:textSize="7sp"
            android:textStyle="bold"
            android:letterSpacing="0.1" />

        <!-- -20% Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="6dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/loss_row_background_light"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="6dp"
            android:paddingVertical="4dp">

            <TextView
                android:id="@+id/label_loss_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="-20%"
                android:textColor="#F85149"
                android:textSize="8sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/value_loss_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â€”"
                android:textColor="#E6EDF3"
                android:textSize="9sp"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- -30% Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="6dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="6dp"
            android:background="@drawable/loss_row_background"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="6dp"
            android:paddingVertical="4dp">

            <TextView
                android:id="@+id/label_loss_2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="-30%"
                android:textColor="#F85149"
                android:textSize="8sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/value_loss_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â€”"
                android:textColor="#E6EDF3"
                android:textSize="9sp"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

</FrameLayout>
